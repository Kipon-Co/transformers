{
  "build": { "dockerfile": "./Dockerfile" },
  "postCreateCommand": "./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "jakeboone02.cypher-query-language",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "EdwinKofler.vscode-assorted-languages",
        "denoland.vscode-deno",
        "IBM.output-colorizer",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "mikestead.dotenv",
        "ms-vscode.sublime-keybindings",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-portuguese-brazilian",
        "wmaurer.change-case",
        "yo1dog.cursor-align"
      ]
    }
  },
  "features": {
    // "ghcr.io/stuartleeks/dev-container-features/dev-tunnels:0": {},
    // "ghcr.io/kreemer/features/chrometesting:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    // "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/devcontainers-contrib/features/deno": {},
    // "ghcr.io/michidk/devcontainers-features/bun:1": {},
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers-contrib/features/supabase-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "v22.13.0" },
    "ghcr.io/eitsupi/devcontainer-features/go-task:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "configureZshAsDefaultShell": true,
      "upgradePackages": true,
      "nonFreePackages": true
    }
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/common-utils",
    // "ghcr.io/stuartleeks/dev-container-features/dev-tunnels",
    "ghcr.io/devcontainers/features/docker-in-docker",
    "ghcr.io/devcontainers/features/node",
    "ghcr.io/devcontainers-contrib/features/deno",
    // "ghcr.io/michidk/devcontainers-features/bun",
    // "ghcr.io/devcontainers/features/python",
    // "ghcr.io/kreemer/features/chrometesting",
    "ghcr.io/devcontainers/features/aws-cli",
    "ghcr.io/devcontainers/features/github-cli",
    "ghcr.io/devcontainers-contrib/features/supabase-cli",
    "ghcr.io/eitsupi/devcontainer-features/go-task",
    "ghcr.io/stuartleeks/dev-container-features/shell-history",
    "ghcr.io/devcontainers/features/desktop-lite"
  ]
}
